
@{
    Layout = null;
}

<!doctype html>
<html lang="en" dir="rtl">
<head>
    <title>sign up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/assets/css/login_style.css" rel="stylesheet" />
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">sign up #07</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last">
                            <div class="text w-100">
                                <h2>Welcome to login</h2>
                                <p> have an account?</p>
                                <a href="/home/login" class="btn btn-white btn-outline-white">Sign in</a>
                            </div>
                        </div>
                        <div class="login-wrap p-4 p-lg-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Sign up</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">

                                        @*<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                            <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>*@
                                    </p>
                                </div>
                            </div>
                            <form action="#" class="signin-form">
                                <div class="form-group mb-3">
                                    <label class="label" for="fname">fname</label>
                                    <input id="fName" type="text" class="form-control" placeholder="frest name" required>
                                    <p id="fnt"></p>
                                </div>

                                <div class="form-group mb-3">
                                    <div class="form-group mb-3">
                                        <label class="label" for="lname">last Name</label>
                                        <input id="LName" type="text" class="form-control" placeholder="last name" required>
                                        <p id="lnt"></p>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="usern">user name</label>
                                        <input id="uname" type="text" class="form-control" placeholder="User Name" required>
                                        <p id="unt"></p>

                                    </div> 
                                    <div class="form-group mb-3">
                                        <label class="label" for="phoneNumber">phone Number</label>
                                        <input id="phone" type="tel" pattern="[0]{1}[0-9]{10}" class="form-control" placeholder="phone Number" required>
                                        <p id="pnt"></p>

                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="label" for="email">email</label>
                                        <input id="email" type="email" class="form-control" placeholder="email" required>
                                        <p id="emt"></p>

                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="state">state</label>
                                        <input id="state" type="text" class="form-control" placeholder="state" required>
                                        <p id="stt"></p>

                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="label" for="city">city</label>
                                        <input id="city" type="text" class="form-control" placeholder="city" required>
                                        <p id="ctt"></p>

                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="label" for="address">address</label>
                                        <input id="address" type="text" class="form-control" placeholder="address" required>
                                        <p id="adt"></p>

                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="label" for="password">Password</label>
                                        <input id="pass" type="password" class="form-control" placeholder="password" required>
                                        <p id="pst"></p>

                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="label" for="password">Password2</label>
                                        <input id="pass2" type="password" class="form-control" placeholder="Password2" required>
                                        <p id="ps2t"></p>

                                    </div>
                                    <div class="form-group">
                                        <button type="submit" id="submit" class="form-control btn btn-primary submit px-3">Sign up</button>
                                    </div>
                                    <div class="form-group d-md-flex">
                                        <div class="w-50 text-md-right">
                                            <a href="#">Forgot Password</a>
                                        </div>
                                        <div class="w-50 text-left">
                                            <label class="checkbox-wrap checkbox-primary mb-0">
                                                قوانینو میپذیرم
                                                <input id="ansercbox" type="checkbox" checked>
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap_bundle_min.js"></script>
    <script src="~/assets/js/sweetalert.min.js"></script>
    <script src="~/assets/js/signUp.js"></script>
</body>
</html>

